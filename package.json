{
  "name": "emotion-ts-plugin",
  "version": "1.0.1",
  "description": "TypeScript Emotion Plugin",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:LeetCode-OpenSource/emotion-ts-plugin.git",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib && tsc -p tsconfig.json --outDir lib --diagnostics",
    "dev": "rm -rf lib && tsc -p tsconfig.json --outDir lib --diagnostics -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "webpack serve --progress --color",
    "test": "jest --no-cache --ci"
  },
  "devDependencies": {
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@swc-node/jest": "^1.1.0",
    "@types/convert-source-map": "^1.5.1",
    "@types/find-root": "^1.1.2",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/react-dom": "^17.0.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-specific-snapshot": "^4.0.0",
    "lint-staged": "^10.5.1",
    "mini-css-extract-plugin": "^1.3.1",
    "prettier": "^2.2.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-loader": "^8.0.11",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@emotion/hash": "^0.8.0",
    "convert-source-map": "^1.7.0",
    "find-root": "^1.1.0",
    "lodash": "^4.17.20",
    "source-map": "^0.7.3",
    "tslib": "^2.0.3"
  },
  "files": [
    "lib/**"
  ],
  "jest": {
    "preset": "@swc-node/jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "/tests/.*\\.spec\\.(j|t)sx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "parser": "typescript"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -c tslint.json --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}