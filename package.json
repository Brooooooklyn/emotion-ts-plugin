{
  "name": "emotion-ts-plugin",
  "version": "0.3.0",
  "description": "TypeScript Emotion Plugin",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:LeetCode-OpenSource/emotion-ts-plugin.git",
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf lib && tsc -p tsconfig.json --outDir lib --diagnostics",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "webpack-dev-server --progress --color",
    "test": "jest --no-cache --ci"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.0",
    "@emotion/styled": "^10.0.0",
    "@types/convert-source-map": "^1.5.1",
    "@types/find-root": "^1.1.1",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.118",
    "@types/react-dom": "^16.0.11",
    "coveralls": "^3.0.2",
    "emotion": "^10.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-specific-snapshot": "^1.0.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@emotion/hash": "^0.7.1",
    "convert-source-map": "^1.6.0",
    "find-root": "^1.1.0",
    "lodash": "^4.17.11",
    "source-map": "^0.7.3",
    "tslib": "^1.9.3"
  },
  "files": [
    "lib/**"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tests/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "/tests/.*\\.spec\\.(j|t)sx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "parser": "typescript"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
